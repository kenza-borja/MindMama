# =============================================================================
# AI Orchestrator Environment Configuration
# =============================================================================
# IMPORTANT: Copy this file to .env and fill in your actual values
# DO NOT commit .env to git (it contains secrets)
# =============================================================================

# -----------------------------------------------------------------------------
# LLM API Keys (Choose ONE)
# -----------------------------------------------------------------------------

# Option 1: OpenAI (Recommended for production)
# Get key from: https://platform.openai.com/api-keys
# Requires: Credit card, ~$5 minimum
OPENAI_API_KEY=sk-your-openai-key-here

# Option 2: Groq (Recommended for development/testing)
# Get key from: https://console.groq.com/
# Free tier: No credit card required!
# GROQ_API_KEY=gsk_your-groq-key-here

# -----------------------------------------------------------------------------
# Model Selection
# -----------------------------------------------------------------------------

# OpenAI Models (if using OpenAI)
# Options: gpt-4o-mini (fast, cheap), gpt-4o (balanced), gpt-4 (best quality)
OPENAI_MODEL=gpt-4o-mini

# Groq Models (if using Groq)
# Options: llama-3.1-70b-versatile (recommended), mixtral-8x7b-32768
# GROQ_MODEL=llama-3.1-70b-versatile

# -----------------------------------------------------------------------------
# AI Behavior Settings
# -----------------------------------------------------------------------------

# Temperature: Controls randomness (0.0 = deterministic, 1.0 = creative)
# Recommended: 0.7 for meal suggestions
TEMPERATURE=0.7

# How many times to retry if AI fails
MAX_RETRIES=3

# API timeout in seconds
TIMEOUT_SECONDS=30

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable debug mode (more verbose logging)
DEBUG=false

# Maximum servings allowed in requests
MAX_SERVINGS=12

# Maximum cooking time in minutes
MAX_COOK_TIME=180

# Maximum recipe text length (characters)
MAX_RECIPE_TEXT_LENGTH=10000

# -----------------------------------------------------------------------------
# Feature Flags (enable/disable features)
# -----------------------------------------------------------------------------

ENABLE_MEAL_SUGGESTIONS=true
ENABLE_RECIPE_EXTRACTION=true
ENABLE_SUPPORTIVE_MESSAGES=true

# Cache responses (useful for testing to save API costs)
ENABLE_CACHING=false

# -----------------------------------------------------------------------------
# Notes
# -----------------------------------------------------------------------------
# - We Start with Groq (free) for development, switch to OpenAI for production
# - Use gpt-4o-mini for best balance of speed, cost, and quality
# - Increase MAX_RETRIES if you have network issues
# - Set LOG_LEVEL=DEBUG when troubleshooting
# - Set ENABLE_CACHING=true during testing to save money